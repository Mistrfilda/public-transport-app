{block content}
    <div class="row px-1 py-3">
        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="col-sm-12 d-flex justify-content-center mb-2">
                <div class="bg-white text-center rounded border-primary border text-gray-800">
                    <div class="rounded font-weight-bold app-heading px-3">
                        Vybrané odjezdové tabule
                    </div>
                </div>
            </div>
            {control pragueDepartureTableListControl}
            <div class="col-md-12 mb-3 mt-1 px-2 py-1">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters">
                            <div class="col text-center">
                                <a href="{plink PragueDepartureTableList:default}" class="btn btn-primary">Všechny
                                    odjezdové
                                    tabule</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="col-sm-12 d-flex justify-content-center mb-2">
                <div class="bg-white text-center rounded border-primary border text-gray-800">
                    <div class="rounded font-weight-bold app-heading px-3">
                        Aktivní neplánované mimořádnosti
                    </div>
                </div>
            </div>
            <div class="col-sm-12 mb-3 mt-1 px-2 py-1">
                {control shortTermRestrictionControl}
            </div>
        </div>
    </div>

    <div class="row px-1 py-3">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="col-sm-12 d-flex justify-content-center mb-2">
                <div class="bg-white text-center rounded border-primary border text-gray-800">
                    <div class="rounded font-weight-bold app-heading px-3">
                        Mapa vozidel
                    </div>
                </div>
            </div>
            <div class="p-2">
                {control mapControl}
            </div>
        </div>
    </div>
{/block}